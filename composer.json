    "description": "Bolt's filesystem abstraction layer",
    "license": "MIT",
    "authors": [
        {
            "name": "Carson Full",
            "email": "carsonfull@gmail.com"
        },
        {
            "name": "Gawain Lynch",
            "email": "gawain.lynch@gmail.com"
        }
    ],
    "require": {
        "guzzlehttp/psr7": "^1.2",
        "league/flysystem": "^1.0",
        "miljar/php-exif": "^0.5",
        "nesbot/carbon": "^1.20",
        "php" : ">=5.4.16",
        "webmozart/glob": "^3.1",
        "symfony/finder": "^2.7"
